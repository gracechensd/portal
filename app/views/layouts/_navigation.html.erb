<%= menu_group do %>
  <%= menu_item "Home", '/home/index' %>
  <%= menu_item "About", '/home/about' %>
  <%= menu_item "Dashboard", '/home/dashboard' %>
  <%= menu_item "Services", '/home/services' %>
  <%= menu_item "Billing", '/home/billing' %>
  <%= menu_item "Help", '/home/help' %>
<% end %>



<% if signed_in? %>
<ul class="nav pull-right">
  <li><%= link_to "Users", '#' %></li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Account <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Profile", current_user %></li>
      <li><%= link_to "Settings", '#' %></li>
      <li class="divider"></li>
      <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
    </ul>
  </li>
</ul>

<% else %>
<form class="navbar-form pull-right">
  <div class="btn-group">
    <a href="/signin" class="btn btn-primary">
    Log In
    </a>
    <a href="/signup" class="btn btn-primary">
    Sign Up
    </a>
  </div>
</form>
<% end %>

